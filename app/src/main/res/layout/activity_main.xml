<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
    android:id="@+id/textTime"
    android:layout_width="122dp"
    android:layout_height="46dp"
    android:layout_marginTop="15dp"
    android:gravity="center"
    android:text="Time : 15"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <TextView
    android:id="@+id/textScore"
    android:layout_width="122dp"
    android:layout_height="46dp"
    android:layout_marginTop="15dp"
    android:gravity="center"
    android:text="Score : 0"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textTime" />

    <GridLayout
    android:id="@+id/gridLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textScore">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@drawable/pika1"
        android:onClick="increaseScore"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_row="0"
        android:layout_column="1"
        android:src="@drawable/pika2"
        android:onClick="increaseScore"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_row="0"
        android:layout_column="2"
        android:src="@drawable/pika3"
        android:onClick="increaseScore"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_row="1"
        android:layout_column="0"
        android:src="@drawable/pika4"
        android:onClick="increaseScore"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_row="1"
        android:layout_column="1"
        android:src="@drawable/pika5"
        android:onClick="increaseScore"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_row="1"
        android:layout_column="2"
        android:src="@drawable/pika6"
        android:onClick="increaseScore"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_row="2"
        android:layout_column="0"
        android:src="@drawable/pika1"
        android:onClick="increaseScore"/>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_row="2"
        android:layout_column="1"
        android:src="@drawable/pika2"
        android:onClick="increaseScore"/>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_row="2"
        android:layout_column="2"
        android:src="@drawable/pika3"
        android:onClick="increaseScore"/>


        <ImageView
            android:id="@+id/psyduckImageView1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/psyduck"
            android:onClick="decreaseScore"/>

        <ImageView
            android:id="@+id/psyduckImageView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/psyduck"
            android:onClick="decreaseScore"/>

        <ImageView
            android:id="@+id/psyduckImageView3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/psyduck"
            android:onClick="decreaseScore"/>


        <ImageView
            android:id="@+id/psyduckImageView4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/psyduck"
            android:onClick="decreaseScore"/>

        <ImageView
            android:id="@+id/psyduckImageView5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/psyduck"
            android:onClick="decreaseScore"/>

        <ImageView
            android:id="@+id/psyduckImageView6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/psyduck"
            android:onClick="decreaseScore"/>

        <ImageView
            android:id="@+id/psyduckImageView7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/psyduck"
            android:onClick="decreaseScore"/>

        <ImageView
            android:id="@+id/psyduckImageView8"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/psyduck"
            android:onClick="decreaseScore"/>


        <ImageView
            android:id="@+id/psyduckImageView9"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@drawable/psyduck"
            android:onClick="decreaseScore"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>